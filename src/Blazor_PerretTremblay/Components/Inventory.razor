@using Blazor_PerretTremblay.Pages
<CascadingValue Value="@this">
    <div class="container" style="display:flex; flex-direction:row">
        <div class="row">
            <div class="col-6">
                <div>Inventory</div>
                <div>
                    <div class="css-grid">
                        @for (int i = 0; i < InventoryPage.NBMAXITEM; i++){
                            <ItemInventory Index="@i"/>
                        }
                    </div>
                </div>
            </div>

            <div>
                <ListAvailableItems/>
            </div>
        </div>
    </div>
</CascadingValue>