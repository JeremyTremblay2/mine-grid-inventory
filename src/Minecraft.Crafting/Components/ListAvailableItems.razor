@using Minecraft.Crafting.Api.Models
<DataGrid TItem="Item"
        Data="@items"
        ReadData="@OnReadData"
        TotalItems="@totalItem"
        PageSize="5"
        ShowPager
        @ondragstart="OnDragStart"
        @ondragend="OnDragEnd"
        SelectedRowChanged="@RowUpdated">
    <DataGridColumn TItem="Item" Field="@nameof(Item.Id)" />
    <DataGridColumn TItem="Item" Field="@nameof(Item.Id)">
        <DisplayTemplate>
            @if (!string.IsNullOrWhiteSpace(context.ImageBase64))
            {
                <img src="data:image/png;base64, @(context.ImageBase64)" class="img-thumbnail" title="@context.DisplayName" alt="@context.DisplayName" style="min-width: 50px; max-width: 150px" />
            }
            else
            {
                <img src="images/default.png" class="img-thumbnail" title="@context.DisplayName" alt="@context.DisplayName" style="max-width: 150px"/>
            }
        </DisplayTemplate>
    </DataGridColumn>
    <DataGridColumn TItem="Item" Field="@nameof(Item.DisplayName)"/>
</DataGrid>
